<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">

    <%= f.input :title, label: "Enter Post Title:", input_html: { class: "string"}, wrapper: false, label_html: { class: "label"}, placeholder: "compose a new post title...", autofocus: true %>
    <%= f.input :body, label: "Enter Post", input_html: { class: "text"}, wrapper: false, label_html: {class: "label"}, placeholder: "compose a new post..." %>
  </div>
</div>

<%= f.button :submit, class: "button bg-info" %>
<% end %>
